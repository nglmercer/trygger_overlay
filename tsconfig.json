{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "baseUrl": "./",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@litcomponents/*": [
        "src/litcomponents/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
    },
  }
}